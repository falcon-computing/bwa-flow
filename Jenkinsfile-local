//update 1.0.6
pipeline {
agent {label 'merlin'}
    stages {
        stage ("build-aws-bwa-flow") {
            steps {
                 dir("ws-bwa-flow") {
		 checkout scm
                 script {
                        sh "rm -rf release"
                        sh "mkdir release"
                        dir("release"){
                        sh "source /curr/software/util/modules-tcl/init/bash"
                        version= sh(returnStdout: true, script: 'git describe --tag').trim()
                        sh "echo $version"
                        sh "module load sdx/17.4; cmake -DCMAKE_BUILD_TYPE=Release -DRELEASE_VERSION=$version -DDEPLOYMENT_DST= -DCMAKE_INSTALL_PREFIX=/curr/limark/falcon-local/tools/bin .."
                        sh "make -j 8"
                        sh "make install"
                        sh "cd ~/falcon-local/tools/bin; echo s3://fcs-cicd-test/release/bwa-flow/bwa-flow-$version- > latest"
                        sh "cd ~/falcon-local/tools/bin; aws s3 cp bwa-flow s3://fcs-cicd-test/release/bwa-flow/bwa-flow-$version"
                        sh "cd ~/falcon-local/tools/bin; aws s3 cp latest s3://fcs-cicd-test/release/bwa-flow/latest"
                        sh "cd ~/falcon-local/bin; rm -f latest"
                        }
                    }
                }
            }
        }
    }
}
